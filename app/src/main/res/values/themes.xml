<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pamschoolcommunication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pamschoolcommunication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">50sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Body">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.PlaceholderText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CardView.Pamschoolcommunication">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">15dp</item>
        <item name="cardBackgroundColor">@color/secondary</item>
    </style>

    <style name="IconImageView">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>
</resources>